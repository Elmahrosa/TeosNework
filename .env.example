# TEOS Network Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# BLOCKCHAIN CONFIGURATION
# ================================
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com
ANCHOR_PROVIDER_URL=https://api.devnet.solana.com
ANCHOR_WALLET=~/.config/solana/id.json

# Token Contract
TEOS_TOKEN_MINT=AhXBUQmbhv9dNoZCiMYmXF4Gyi1cjQthWHFhTL2CJaSo
TEOS_TOKEN_DECIMALS=9

# Program IDs (replace with your deployed program IDs)
TOKEN_PROGRAM_ID=your_token_program_id_here
GOVERNANCE_PROGRAM_ID=your_governance_program_id_here
STAKING_PROGRAM_ID=your_staking_program_id_here
MINING_PROGRAM_ID=your_mining_program_id_here

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://username:password@localhost:5432/teos_network
REDIS_URL=redis://localhost:6379

# ================================
# API CONFIGURATION
# ================================
API_BASE_URL=http://localhost:3000
API_SECRET_KEY=your_super_secret_api_key_here
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ================================
# EXTERNAL SERVICES
# ================================
# OpenAI for AI features
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# ================================
# STORAGE CONFIGURATION
# ================================
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=teos-network-assets

# IPFS for decentralized storage
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# ================================
# PAYMENT PROCESSING
# ================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ================================
# ANALYTICS & MONITORING
# ================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your_sentry_dsn_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# ================================
# MOBILE APP CONFIGURATION
# ================================
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_SOLANA_NETWORK=devnet
EXPO_PUBLIC_TEOS_TOKEN_MINT=AhXBUQmbhv9dNoZCiMYmXF4Gyi1cjQthWHFhTL2CJaSo

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
NODE_ENV=development
PORT=3000
DEBUG=teos:*

# Hot reload and development tools
FAST_REFRESH=true
GENERATE_SOURCEMAP=true

# ================================
# CULTURAL CONTENT
# ================================
CULTURAL_CONTENT_API=https://api.egyptianheritage.org
MUSEUM_API_KEY=your_museum_api_key_here
VR_CONTENT_CDN=https://cdn.teosnetwork.com/vr/

# ================================
# PI NETWORK INTEGRATION
# ================================
PI_NETWORK_API_URL=https://api.minepi.com
PI_NETWORK_API_KEY=your_pi_network_api_key_here
PI_NETWORK_APP_ID=your_pi_app_id_here

# ================================
# DOMAIN PLATFORM
# ================================
DOMAIN_REGISTRY_CONTRACT=your_domain_registry_contract_here
DOMAIN_RESOLVER_CONTRACT=your_domain_resolver_contract_here
ENS_REGISTRY=your_ens_registry_contract_here

# ================================
# SECURITY
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,https://teosegypt.com
HELMET_CSP_DIRECTIVES=default-src 'self'

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/teos-network.log

# ================================
# TESTING
# ================================
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/teos_network_test
TEST_SOLANA_NETWORK=localnet
TEST_PRIVATE_KEY=your_test_private_key_here

